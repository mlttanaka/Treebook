<div class="page-header">
  <h1>All statuses</h1>
</div>

<%= link_to 'Post a New Status', new_status_path, class: "button radius" %>

<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.user.profile_name %></strong>
    <p><%= status.content %></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
        | <%= link_to "", edit_status_path(status), class: "general fi-pencil",
              title: "edit" %>
        | <%= link_to "", status, method: :delete, class: "general fi-x",
              title: "delete",
              data: { confirm: "Are you sure you want to delete this status?"} %>
      </span>
    </div>
  </div>
<% end %>
